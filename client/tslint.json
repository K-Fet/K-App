{
    "rulesDirectory": [
        "node_modules/codelyzer",
        "node_modules/tslint-eslint-rules/dist/rules"
    ],
    "extends": ["tslint-eslint-rules"],
    "rules": {
        // According to tslint-eslint-rules doc
        "no-constant-condition": true,

        // Shared rules with back
        "block-spacing": [true, "always"],
        "brace-style": [
            true,
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "exports": "always",
                    "imports": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "singleline": "never"
            }
        ],
        "ter-computed-property-spacing": [true],
        "triple-equals": true,
        "eofline": true,
        "label-position": true,
        "no-invalid-this": true,
        "no-construct": true,
        "no-string-throw": true,
        "no-multi-spaces": [true],
        "ter-indent": [
            true,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [true, "LF"],
        "ter-func-call-spacing": [true],
        "no-trailing-whitespace": true,
        "object-curly-spacing": [true, "always"],
        "new-parens": true,
        "quotemark": [true, "single"],
        "semicolon": [true, "always"],
        "space-in-parens": [true, "never"],
        "ter-prefer-arrow-callback": [true],
        "prefer-const": true,
        "no-console": [
            true,
            "log",
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            },
            {
                "call-signature": "onespace",
                "index-signature": "onespace",
                "parameter": "onespace",
                "property-declaration": "onespace",
                "variable-declaration": "onespace"
            }
        ],
        "no-return-await": true,
        "one-variable-per-declaration": [true, "ignore-for-loop"],
        "no-duplicate-variable": [true, "check-parameters"],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always",
                "method": "never",
                "constructor": "never"
            }
        ],
        "comment-format": [true, "check-space"],
        "no-debugger": true,
        "no-unused-expression": [true, "allow-fast-null-checks"],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ],
        // MISSING RULES
        // no-extra-bind, no-extra-label, no-floating-decimal, no-new-func, no-param-reassign, no-return-assign,
        // no-self-assign, no-sequences, no-unmodified-loop-condition, no-useless-concat, no-new-require, func-names,
        // function-paren-newline, newline-per-chained-call, no-whitespace-before-property, operator-linebreak,
        // nonblock-statement-body-position, object-curly-newline, no-unneeded-ternary, require-jsdoc, semi-spacing, semi-style,
        // space-before-blocks, space-unary-ops, switch-colon-spacing, prefer-rest-params, prefer-spread, prefer-template,
        // no-self-compare, no-proto

        // Front rules
        "arrow-return-shorthand": true,
        "only-arrow-functions": [
            true,
            "allow-declarations",
            "allow-named-functions"
        ],
        "no-unnecessary-initializer": true,
        "ordered-imports": [
            true,
            {
                "import-sources-order": "any",
                "named-imports-order": "case-insensitive",
                "grouped-imports": true
            }
        ],
        "no-duplicate-imports": true,
        "no-require-imports": true,
        "no-default-export": true,
        "typedef": [true, "call-signature", "property-declaration"],
        "no-inferrable-types": true,
        "array-type": [true, "generic"],
        "no-angle-bracket-type-assertion": true,
        "prefer-template": true,
        "no-invalid-template-strings": true,
        "prefer-conditional-expression": [true, "check-else-if"],
        "switch-default": true,
        "no-switch-case-fall-through": true,
        "no-duplicate-switch-case": true,
        "encoding": true,
        "max-line-length": [true, 140],
        "space-within-parens": [true, 0],
        "import-spacing": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace",
            "check-else",
            "check-catch",
            "check-finally"
        ],
        "no-consecutive-blank-lines": [true, 1],
        "align": [true, "parameters", "statements"],
        "class-name": true,
        "no-empty": true
    }
}
