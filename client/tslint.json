{
  "extends": [
    "tslint-config-airbnb"
  ],
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import |^export {(.*?)}|class [a-zA-Z]+ implements |//"
      }
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "ban-keywords"
    ]
  }
}
