{
  "env": {
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": [
    "airbnb-base",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "jest"
  ],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/tests/**/*.js"
        ]
      }
    ],
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreTemplateLiterals": true,
        "ignoreStrings": true
      }
    ],
    "no-underscore-dangle": "off"
  },
  "root": true,
  "overrides": [
    {
      "files": [
        "**/__tests__/**/*.js",
        "server/tests/**/*.js"
      ],
      "rules": {
        "no-unused-vars": "off",
        "no-undef": "off",
        "require-jsdoc": "off",
        "no-console": [
          0
        ]
      }
    }
  ]
}
