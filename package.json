{
  "name": "k-app",
  "version": "2.1.3",
  "description": "K-App provide a large panel of useful tools for associations",
  "contributors": [
    "Corentin Giraud <corentin.giraud@insa-lyon.fr>",
    "Marc-Antoine Fernandes <marcantoinefernandes@gmail.com>",
    "Baptiste Viry",
    "ClÃ©ment Guittat",
    "Mickael Gadou"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/K-Fet/K-App"
  },
  "bugs": {
    "url": "https://github.com/K-Fet/K-App/issues"
  },
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "build": "yarn --cwd client/ build",
    "build:prod": "yarn --cwd client/ build:prod",
    "cli": "node tools/cli/index.js",
    "dev": "concurrently --kill-others \"npm:dev:*\"",
    "dev:back": "nodemon --watch server --inspect",
    "dev:front": "yarn --cwd client/ start",
    "eslint": "eslint server/",
    "postinstall": "yarn install --production=false --cwd client/",
    "test": "concurrently \"npm:test:*\"",
    "test:lint": "eslint server/ && yarn --cwd client/ lint",
    "test:back:it": "jest int",
    "test:back:unit": "jest unit --coverage",
    "test:front": "yarn --cwd client/ build",
    "preversion": "yarn test && yarn build:prod",
    "postversion": "git push --follow-tags && opn https://github.com/K-Fet/K-App/releases/new"
  },
  "dependencies": {
    "argon2": "0.19.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-joi-validation": "^0.3.0",
    "express-jwt": "^5.3.1",
    "express-jwt-permissions": "^1.2.1",
    "express-rate-limit": "^2.12.2",
    "express-x-hub": "^1.0.4",
    "inquirer": "^6.2.0",
    "joi": "^13.7.0",
    "jsonwebtoken": "^8.3.0",
    "moleculer": "^0.13.4",
    "moleculer-db": "^0.7.6",
    "moleculer-db-adapter-mongoose": "^0.7.2",
    "moleculer-web": "^0.8.3",
    "mongoose": "^5.3.12",
    "morgan": "^1.9.1",
    "mysql2": "^1.6.1",
    "nconf": "^0.10.0",
    "nodemailer": "^4.6.8",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "sequelize": "^4.39.0",
    "umzug": "^2.1.0",
    "uuid": "^3.3.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "codecov": "^3.0.4",
    "concurrently": "^4.0.1",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.24.1",
    "jest": "^23.5.0",
    "jest-environment-node": "^23.4.0",
    "jest-extended": "^0.11.0",
    "ngrok": "^3.1.0",
    "nodemon": "^1.18.3",
    "opn-cli": "^3.1.0",
    "sqlite3": "^4.0.2",
    "supertest": "^3.1.0"
  },
  "main": "server/index.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/__tests__/**",
      "server/tests*"
    ],
    "delay": "2500"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/server/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "app/models/"
    ],
    "setupTestFrameworkScriptFile": "jest-extended",
    "testEnvironment": "node"
  }
}
