{
    "name": "K-App",
    "version": "0.0.1",
    "description": "K-App provide a large panel of useful tools for associations",
    "main": "server/index.js",
    "repository": "https://github.com/K-Fet/K-App",
    "author": "Marc-Antoine Fernandes <embraser01@gmail.com>",
    "license": "Apache-2.0",
    "private": true,
    "scripts": {
        "build": "cd client/ && npm run build:prod",
        "build:dev": "cd client/ && npm run build",
        "dev": "concurrently --kill-others \"npm run dev:back\" \"npm run dev:front\"",
        "dev:back": "node server/index.js",
        "dev:front": "cd client/ && npm start",
        "eslint": "eslint server/",
        "eslint:watch": "esw --watch server/",
        "lint": "npm run eslint && cd client/ && npm run lint",
        "postinstall": "cd client/ && npm install",
        "prod": "export NODE_ENV=production npm start",
        "test": "nyc mocha server/test/ && npm run lint",
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
    },
    "dependencies": {
        "bcrypt-nodejs": "0.0.3",
        "body-parser": "^1.4.3",
        "compression": "^1.7.1",
        "cookie-parser": "^1.4.3",
        "deepmerge": "^2.0.0",
        "express": "^4.13.4",
        "morgan": "^1.1.1",
        "passport": "^0.4.0",
        "passport-local": "^1.0.0",
        "winston": "^3.0.0-rc1"
    },
    "devDependencies": {
        "codecov": "^2.3.1",
        "concurrently": "^3.5.0",
        "eslint": "^4.9.0",
        "mocha": "^4.0.1",
        "nyc": "^11.2.1",
        "should": "^13.1.2",
        "sinon": "^4.0.1"
    },
    "engines": {
        "node": ">8.0.0"
    }
}
