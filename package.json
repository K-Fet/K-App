{
    "name": "K-App",
    "version": "0.0.1",
    "description": "K-App provide a large panel of useful tools for associations",
    "main": "server/index.js",
    "repository": "https://github.com/K-Fet/K-App",
    "contributors": [
        "Corentin Giraud",
        "Marc-Antoine Fernandes <marcantoinefernandes@gmail.com>"
    ],
    "license": "Apache-2.0",
    "private": true,
    "scripts": {
        "build": "cd client/ && npm run build:prod",
        "build:dev": "cd client/ && npm run build",
        "dev": "concurrently --kill-others \"npm run dev:back\" \"npm run dev:front\"",
        "dev:back": "nodemon --watch server --watch server/index.js --inspect",
        "dev:front": "cd client/ && npm start",
        "eslint": "eslint server/",
        "eslint:watch": "esw --watch server/",
        "lint": "npm run eslint && cd client/ && npm run lint",
        "postinstall": "cd client/ && npm install",
        "prod": "export NODE_ENV=production npm start",
        "test": "concurrently \"npm run test:back\" \"npm run test:front\"",
        "test:back": "nyc mocha server/test/**/*.js --require server/test/mocha.env",
        "test:front": "npm run lint",
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
    },
    "dependencies": {
        "argon2": "^0.16.2",
        "body-parser": "^1.4.3",
        "compression": "^1.7.1",
        "deepmerge": "^2.0.1",
        "express": "^4.13.4",
        "express-jwt": "^5.3.0",
        "express-jwt-permissions": "^1.0.0",
        "inquirer": "^4.0.2",
        "jsonwebtoken": "^8.1.0",
        "morgan": "^1.1.1",
        "mysql2": "^1.5.1",
        "sequelize": "^4.29.0",
        "uuid": "^3.1.0",
        "winston": "^3.0.0-rc1"
    },
    "devDependencies": {
        "codecov": "^3.0.0",
        "concurrently": "^3.5.1",
        "eslint": "^4.14.0",
        "mocha": "^4.1.0",
        "node-mocks-http": "^1.6.6",
        "nodemon": "^1.14.8",
        "nyc": "^11.4.1",
        "proxyquire": "^1.8.0",
        "sequelize-mocking": "^1.3.1",
        "should": "^13.2.0",
        "should-sinon": "0.0.6",
        "sinon": "^4.1.3"
    },
    "engines": {
        "node": ">8.0.0"
    },
    "nodemonConfig": {
        "ignore": [
            "**/test/**",
            "client/"
        ],
        "delay": "2500"
    },
    "nyc": {
        "include": "server/",
        "exclude": [
            "**/app/routes/**.js",
            "**/test/**.js"
        ]
    }
}
